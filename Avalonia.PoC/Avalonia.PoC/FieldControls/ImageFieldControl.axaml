<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:f="clr-namespace:Avalonia.PoC.ViewModels.Fields"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.PoC.FieldControls.ImageFieldControl"
             x:DataType="f:ImageViewModel">
    <UserControl.Content>
        <StackPanel Margin="5" Background="#5d5d5d">
            <TextBlock Text="Image:" Margin="5" />
            <Image Width="400"
                   Source="/Assets/fall-image.jpg"
                   Margin="5"
                   IsVisible="{Binding IsImageVisible}"/>
        </StackPanel>
    </UserControl.Content>
</UserControl>

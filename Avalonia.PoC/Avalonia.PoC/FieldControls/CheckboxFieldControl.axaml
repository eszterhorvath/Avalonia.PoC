<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.PoC.FieldControls.CheckboxFieldControl">
    <UserControl.Content>
        <StackPanel Margin="5">
            <TextBlock Text="CheckBox:" Margin="0,0,0,5" />
            <StackPanel>
                <CheckBox>Blue</CheckBox>
                <CheckBox IsChecked="True">Purple</CheckBox>
                <CheckBox>Green</CheckBox>
                <CheckBox>Yellow</CheckBox>
            </StackPanel>
        </StackPanel>
    </UserControl.Content>
</UserControl>
             xmlns:views="clr-namespace:Avalonia.PoC.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.PoC.Views.HeadlineView"
             x:DataType="f:HeadlineViewModel">
